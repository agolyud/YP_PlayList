<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    android:theme="@style/Theme.YP_PlayList.Settings"
    app:startDestination="@id/mediaLibraryFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.yp_playlist.settings.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/mediaLibraryFragment"
        android:name="com.example.yp_playlist.medialibrary.ui.fragment.MediaLibraryFragment"
        android:label="fragment_media_library"
        tools:layout="@layout/fragment_media" >
        <action
            android:id="@+id/action_mediaLibraryFragment_to_newPlaylistFragment"
            app:destination="@id/newPlaylistFragment" />
        <action
            android:id="@+id/action_mediaLibraryFragment_to_openPlaylistFragment"
            app:destination="@id/OpenPlaylistFragment" />
        <action
            android:id="@+id/action_mediaLibraryFragment_to_playerFragment"
            app:destination="@id/playerActivity" />
    </fragment>

    <fragment
        android:id="@+id/OpenPlaylistFragment"
        android:name="com.example.yp_playlist.medialibrary.playlists.ui.fragment.OpenPlaylistFragment"
        android:label="fragment_open_playlist"
        tools:layout="@layout/fragment_open_playlist" >
        <action
            android:id="@+id/action_openPlaylistFragment_to_playerFragment"
            app:destination="@id/playerActivity" />
        <action
            android:id="@+id/action_openPlaylistFragment_to_editPlaylistFragment"
            app:destination="@id/editPlaylistFragment" />
    </fragment>

    <fragment
        android:id="@+id/editPlaylistFragment"
        android:name="com.example.yp_playlist.medialibrary.playlists.ui.fragment.EditPlaylistFragment"
        android:label="EditPlaylistFragment"
        tools:layout="@layout/fragment_new_playlist"/>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.yp_playlist.presentation.search.SearchFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_search">

    <action
        android:id="@+id/searchFragment_to_playerFragment"
        app:destination="@id/playerActivity" />
    </fragment>

    <fragment
        android:id="@+id/playerActivity"
        android:name="com.example.yp_playlist.presentation.media.MediaFragment"
        android:label="activity_player"
        tools:layout="@layout/fragment_player">
    <action
        android:id="@+id/action_playerFragment_to_newPlaylistFragment"
        app:destination="@id/newPlaylistFragment" />
    </fragment>

    <fragment
        android:id="@+id/newPlaylistFragment"
        android:name="com.example.yp_playlist.medialibrary.playlists.ui.fragment.AddPlayListFragment"
        android:label="fragment_new_playlist"
        tools:layout="@layout/fragment_new_playlist" />

</navigation>