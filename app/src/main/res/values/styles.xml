<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?attr/mainPageButtonText</item>
        <item name="android:layout_marginTop">@dimen/button_margins</item>
        <item name="android:layout_marginBottom">@dimen/button_margins</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/button_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsButton">
        <item name="android:layout_width">@dimen/page_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/settingsPageBackground</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/settingsPageIcoColor</item>
    </style>

    <style name="SettingsButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/button_corner_radius</item>
        <item name="android:layout_marginTop">@dimen/settings_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/settings_text_margin</item>
        <item name="android:layout_weight">3</item>
        <item name="android:backgroundTint">?attr/settingsPageBackground</item>
        <item name="android:textColor">?attr/settingsPageButtonText</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="track_view">
        <item name="android:textColor">#AEAFB4</item>
        <item name="android:drawableTint">#AEAFB4</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageViewSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_margin">@dimen/margin_settings_20</item>
        <item name="android:textColor">#AEAFB4</item>
        <item name="android:checked">false</item>
    </style>

    <style name="search_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_24</item>
        <item name="android:layout_marginEnd">@dimen/padding_24</item>
        <item name="android:layout_marginBottom">@dimen/padding_24</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">@dimen/margin_settings_20</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="search_plaseholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">86dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="search_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center</item>
        <item name="android:layout_marginBottom">@dimen/button_corner_radius</item>
    </style>

    <style name="search_button_refresh">
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">@color/button_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="clear_button">
        <item name="android:layout_width">@dimen/button_corner_radius</item>
        <item name="android:layout_height">@dimen/button_corner_radius</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:layout_marginStart">@dimen/button_corner_radius</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:visibility">invisible</item>
    </style>


    <style name="button_refresh" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="you_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>


    <style name="constraintGuide_vertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="player_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="player_textView_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

    </style>

    <style name="player_textView_long">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="player_track_long">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="panel_header_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_4</item>
        <item name="android:layout_marginBottom">@dimen/padding_24</item>
        <item name="android:background">?attr/settingsPageBackground</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">@dimen/standard_margin</item>
    </style>

    <style name="panel_player_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_4</item>
        <item name="navigationIcon">@drawable/back</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:layout_marginBottom">@dimen/padding_24</item>
        <item name="android:background">?attr/settingsPageBackground</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">0dp</item>
    </style>

    <style name="tabLayout">
        <item name="android:background">?attr/settingsPageBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="tabTextColor">?attr/colorOnSecondary</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">?attr/colorOnSecondary</item>
        <item name="tabRippleColor">?attr/colorOnSecondary</item>
        <item name="tabPadding">16dp</item>
    </style>


    <style name="tabText_style" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="tabText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NavigationViewStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/navigation_color</item>
        <item name="itemTextColor">@drawable/navigation_color</item>
        <item name="menu">@menu/navigation_menu</item>
    </style>

    <style name="RoundedBottomSheetDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:topLeftRadius">16dp</item>
        <item name="android:topRightRadius">16dp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue_fon</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue_fon</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>



</resources>