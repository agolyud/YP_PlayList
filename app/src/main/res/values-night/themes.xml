<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<attr name="mainPageButtonText"/>
<attr name="mainPageButtonBackground"/>
<attr name="mainPageBackground"/>

<attr name="settingsPageTitleText"/>
<attr name="settingsPageButtonText"/>
<attr name="settingsPageIcoColor"/>
<attr name="settingsPageBackground"/>

<style name="Theme.YP_PlayList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/blue_fon</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_200</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
</style>

<style name="Theme.YP_PlayList.Settings">
    <item name="settingsPageTitleText">@color/white</item>
    <item name="settingsPageButtonText">@color/white</item>
    <item name="settingsPageIcoColor">@color/white</item>
    <item name="settingsPageBackground">@color/button_text</item>
</style>


</resources>