<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white_fon"
    android:padding="@dimen/standard_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="24dp"
            app:navigationIcon="@drawable/back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:text="@string/settings_button"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/standard_text_size"/>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="@dimen/settings_text_margin"
            android:layout_marginBottom="@dimen/settings_text_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:textAllCaps="false"
            android:text="@string/black_theme"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_text_margin"
            android:layout_marginBottom="@dimen/settings_text_margin"
            android:gravity="end"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="@dimen/settings_text_margin"
            android:layout_marginBottom="@dimen/settings_text_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:textAllCaps="false"
            android:text="@string/share_application"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/settings_text_margin"
            android:layout_marginBottom="@dimen/settings_text_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:src="@drawable/share_app"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="@dimen/settings_text_margin"
            android:layout_marginBottom="@dimen/settings_text_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:textAllCaps="false"
            android:text="@string/write_to_support"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/settings_text_margin"
            android:layout_marginBottom="@dimen/settings_text_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:src="@drawable/write_to_support"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="@dimen/settings_text_margin"
            android:layout_marginBottom="@dimen/settings_text_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:textAllCaps="false"
            android:text="@string/license_agreement"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/settings_text_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/settings_text_margin"
            android:src="@drawable/terms_of_use" />
    </FrameLayout>
</LinearLayout>