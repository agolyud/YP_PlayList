<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/settingsPageBackground"
    android:orientation="vertical"
    android:theme="@style/Theme.YP_PlayList.Settings">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/settings_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="?attr/settingsPageBackground"
        android:stateListAnimator="@null"
        app:icon="@drawable/back"
        app:iconGravity="textStart"
        app:iconTint="?attr/settingsPageTitleText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/find_button"
        android:textColor="?attr/settingsPageTitleText"
        android:textSize="@dimen/standard_text_size"
        />
</LinearLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <EditText
        android:id="@+id/SearchForm"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:backgroundTint="@color/grey_tint_search"
        android:drawableStart="@drawable/search"
        android:drawablePadding="8dp"
        android:drawableTint="@color/light_grey"
        android:fontFamily="@font/ys_display_regular"
        android:hint="@string/find_button"
        android:inputType="text"
        android:maxLength="255"
        android:maxLines="1"
        android:padding="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="32dp"
        android:textColor="?attr/settingsPageTitleText"
        android:textColorHint="@color/light_grey"
        android:textCursorDrawable="@drawable/color_cursor"

        />

    <ImageView
        android:id="@+id/clear"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center|end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:visibility="invisible"
        app:tint="@color/light_grey" />
</FrameLayout>

</LinearLayout>